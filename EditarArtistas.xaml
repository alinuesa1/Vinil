<!-- EditarArtistaWindow.xaml -->
<Window x:Class="AppVinilos.EditarArtistas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editar Artista" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Nombre Artístico:"/>
            <TextBox x:Name="txtNombreArtistico" Width="200" Margin="0,0,0,10"/>

            <TextBlock Text="Nombre Real:"/>
            <TextBox x:Name="txtNombreReal" Width="200" Margin="0,0,0,10"/>

            <!-- Agrega más controles según sea necesario -->

            <Button Content="Guardar Cambios" Width="120" Height="25" Click="BtnGuardarCambios_Click"/>
        </StackPanel>
    </Grid>
</Window>
